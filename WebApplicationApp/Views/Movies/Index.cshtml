@model IEnumerable<WebApplicationApp.Models.Movie>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h1 class="page-header">My movies!!!</h1>
<p>
    <a href="/Movies/Create" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new movie</a>
</p>
<table class="table table-bordered table-hover">

    <tr>
        <th>Movie</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Number Available</th>
        <th class="text-right">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberAvailable)
            </td>
            <td class="text-right">
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-info btn-xs" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list btn btn-success btn-xs" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
