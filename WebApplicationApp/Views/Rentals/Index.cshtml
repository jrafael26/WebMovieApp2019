@model IEnumerable<WebApplicationApp.Models.Rental>

<p>
    @Html.ActionLink("Create New", "NewRental")
</p>
<table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0"
       id="myTable">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Movie
            </th>
            <th>
                Date Rented
            </th>
            <th>
                Date Returned
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateReturned)
                </td>
                <td class="text-right">
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-calendar btn btn-success btn-sm" })
                </td>
            </tr>
        </tbody>
    }

</table>
@section scripts
{
    @Scripts.Render("~/bundles/lib")
    @Styles.Render("~/bundles/css")

    <script>
        $(document).ready(function () {
            $("#btnDevolver").click(function () {
                bootbox.alert("Click, movies: ");
                

            });
        });

    </script>
}