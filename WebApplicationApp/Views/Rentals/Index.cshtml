@model IEnumerable<WebApplicationApp.Models.Rental>

@{
    ViewData["Title"] = "Rentals";
}


@*<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create New</a>
</p>*@

<p>
    <a href="/Movies/Create" class="btn btn-primary btn-sn pull-right"><i class="glyphicon glyphicon-plus"></i> Create New</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Rentals</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateRented)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateReturned)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Movie.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateRented)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReturned)
                                </td>
                                <td>
                                    <a asp-action="Save" asp-route-id="@item.Id" class="btn btn-info" id="btnDeliver">Save</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
  <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
